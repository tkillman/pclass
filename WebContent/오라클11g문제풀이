<18쪽>
1.
select *
from EMP
where EMPNO=10


2.
select EMPNO, ENAME, SAL
from EMP
where SAL<2000

3.
select empno, ename, job
from emp
where ename = 'MILLER'


4.

select *
from emp
where sal between 1000 and 3000

