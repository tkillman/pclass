<36쪽>


select hiredate - sysdate
from emp
where deptno =10

<41쪽>

select nvl(mgr,'CEO')
from emp
where mgr is null


<42쪽>


select empno,ename,job,sal,
	case when job='ANALYST' then comm *1.5
		 when job='salaryman' then comm*1.15
		 when job='clerk' then comm*1.2
		 end

from emp

<44쪽>
select count(*), count(comm)
from emp
group by deptno

