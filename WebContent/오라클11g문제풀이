<14쪽>
EMP 테이블
dept 테이블

create table emp(
empno number(4) not null --사원번호
,ename varchar2(10) --이름
,job varchar2(9) --업무명
,mgr number(4) --상사번호
,hiredate date  --입사일
,sal number(7,2) --월급
,comm number(7,2) --커미션
,deptno number(2) --부서번호
)

create table dept(
deptno number(2) not null --부서번호
,dname varchar2(14) --부서이름 
,loc  varchar2(13) --지역
)

